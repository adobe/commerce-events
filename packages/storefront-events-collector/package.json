        "webpack": "^5.26.0",
        "webpack-cli": "^4.5.0",
        "webpack-dev-server": "^4.0.0-beta.0",
        "webpack-merge": "^5.7.3"
    },
    "husky": {
        "hooks": {
            "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
        }
