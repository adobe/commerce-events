{
    "$schema": "https://turborepo.org/schema.json",
    "baseBranch": "origin/main",
    "pipeline": {
        "build": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                "dist/**",
                ".next/**"
            ]
        },
        "build:qa": {
            "dependsOn": [
                "^build:qa"
            ],
            "outputs": [
                "dist/**",
                ".next/**"
            ]
        },
        "test": {
            "dependsOn": ["^build"],
            "outputs": ["coverage/**"]
        },
        "lint": {
            "outputs": []
        },
        "start": {
            "cache": false
        },
        "dev": {
            "dependsOn": ["^build"],
            "cache": false
        }
    }
}
