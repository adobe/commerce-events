{
  "$schema": "https://turborepo.org/schema.json",
  "baseBranch": "origin/main",
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**",
        ".next/**"
      ]
    },
    "build:qa": {
      "dependsOn": [
        "^build:qa"
      ],
      "outputs": [
        "dist/**",
        ".next/**"
      ]
    },
    "build:prod": {
      "dependsOn": [
        "^build:prod"
      ],
      "outputs": [
        "dist/**"
      ]
    },
    "test": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "coverage/**"
      ]
    },
    "lint": {
      "outputs": []
    },
    "start": {
      "cache": false
    },
    "dev": {
      "dependsOn": [
        "^build"
      ],
      "cache": false
    },
    "ace": {
      "dependsOn": [
        "^ace"
      ],
      "cache": false
    }
  }
}
